<%= form_for @student do |f| %>
    <%= f.label :student_name %>
    <%= f.select :student_name, 
    [["タロウ", "タロウ"], 
    ["ハナコ", "ハナコ"], 
    ["ハルオ", "ハルオ"],
    ["ナツコ", "ナツコ"]], include_blank: "選択して下さい" %>

    <%= f.label :sex %>
    　 <%= f.radio_button :sex, "男" %>男 <%= f.radio_button :sex, "女" %>女

    <%= f.label :grade %>
    <%= f.select :grade, 
    [["小学生", "小学生"], 
    ["中学1年生", "中学1年生"], 
    ["中学2年生", "中学2年生"],
    ["中学3年生", "中学3年生"], 
    ["高校1年生", "高校1年生"],
    ["高校2年生", "高校2年生"],
    ["高校3年生", "高校3年生"],
    ["浪人生", "浪人生"]], include_blank: "選択して下さい" %>

    <%= f.label :subject %>
    <%= f.select :subject, 
    [["国語", "国語"], 
    ["算数", "算数"], 
    ["理科", "理科"],
    ["社会", "社会"], 
    ["英語", "英語"],
    ["現代文", "現代文"], 
    ["古典", "古典"],
    ["漢文", "漢文"], 
    ["数学", "数学"],
    ["数Ⅰ", "数Ⅰ"],
    ["数Ⅱ", "数Ⅱ"],
    ["数Ⅲ", "数Ⅲ"],
    ["物理", "物理"],
    ["化学", "化学"], 
    ["生物", "生物"],
    ["地学", "地学"], 
    ["日本史", "日本史"],
    ["世界史", "世界史"],
    ["地理", "地理"],
    ["公民", "公民"],
    ["現代社会", "現代社会"],
    ["倫理", "倫理"],
    ["政治・経済", "政治・経済"],
    ["その他", "その他"]], include_blank: "選択して下さい" %>
    <%= f.submit "編集する" %>
  <% end %>